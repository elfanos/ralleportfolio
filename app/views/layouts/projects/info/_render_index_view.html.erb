          function fixTilePosition(tile, ind, time) {
              if (time == null) time = 0;
              var centr, centrCol, centrRow, offsetW, offsetH, left, top;

              centr = Math.floor(c * r / 2);
              centrCol = Math.ceil(centr / c);
              centrRow = Math.ceil(centr / r);

              offsetW = w / centrCol;
              offsetH = h / centrRow;

