              top = (Math.round((Math.floor(ind / c) - centrRow + 1) * offsetH));
              TweenMax.to(tile, time, {
                  css: {backgroundPosition: left + "px " + top + "px"},
                  ease: Power1.easeOut
              });
          }

      }

